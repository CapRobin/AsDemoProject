<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_myview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_white_bg">

        <RelativeLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/dialog_top_bg">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="提    示"
                android:textColor="@color/white"
                android:textSize="15dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleLayout"
            android:padding="25dip">

            <TextView
                android:id="@+id/contenttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="您确定要退出程序吗？"

                android:textColor="@color/black"
                android:textSize="18dip" />
        </RelativeLayout>

        <View
            android:id="@+id/line_view_hor"
            style="@style/line_view_hor"
            android:layout_below="@+id/contentLayout" />

        <LinearLayout
            android:id="@+id/controlLout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/line_view_hor"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/cancelLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_cancel_bg">

                <TextView
                    android:id="@+id/cancelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="取消"
                    android:textColor="@color/black"
                    android:textSize="15dip" />

                <View
                    android:id="@+id/centerLineRight"
                    android:layout_width="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/gray" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/okLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_exit_bg">

                <TextView
                    android:id="@+id/exitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确定"
                    android:textColor="@color/black"
                    android:textSize="15dip" />

                <View
                    android:id="@+id/centerLineLeft"
                    android:layout_width="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@color/gray" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>