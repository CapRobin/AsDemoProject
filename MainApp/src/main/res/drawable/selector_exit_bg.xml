<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--点击(选中)状态-->
    <item android:state_pressed="true">
        <shape>
            <!-- 填充 -->
            <solid android:color="@color/gray" />
            <!-- 圆角 -->
            <corners
                android:bottomRightRadius="5dip" />
            <!-- 间隔 -->
            <padding
                android:bottom="5dip"
                android:left="15dip"
                android:right="15dip"
                android:top="5dip" />
            <!-- 背景边框设置 -->
            <stroke
                android:width="0.1dp"
                android:color="@color/transparent" />
        </shape>
    </item>


    <!--默认状态显示-->
    <item android:state_pressed="false">
        <shape>
            <!-- 填充 -->
            <solid android:color="@color/white" />
            <!-- 圆角 -->
            <corners
                android:bottomRightRadius="5dip"/>
            <!-- 间隔 -->
            <padding
                android:bottom="5dip"
                android:left="15dip"
                android:right="15dip"
                android:top="5dip" />
            <!-- 背景边框设置 -->
            <stroke
                android:width="0.1dp"
                android:color="@color/transparent" />
        </shape>
    </item>
</selector>